<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xbstar.graph.dao.PersonMapper">


	
 	<select id="findAll" resultType="Person">
		select
			pb.id, pb.name
		from 
			person_base pb
		order by
			id asc
		limit 100
	</select>  
	
	

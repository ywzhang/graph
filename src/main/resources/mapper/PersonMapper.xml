  <select id="findById" resultType="Person">
    SELECT
	  pb.name,
      pb.address,
      pb.telephone,
      pb.birthday,
      pb.identity,
      i.institution_name,
      i.id as institution_id
  FROM
      person p
  LEFT JOIN person_base pb ON p.person_base_id = pb.id
  LEFT JOIN institution i ON p.institution_id = i.id
  where p.id = #{id}
  </select>
  

	


